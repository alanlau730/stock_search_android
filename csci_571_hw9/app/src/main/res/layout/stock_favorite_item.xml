<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/favorite_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:textSize="@dimen/stock_news_size"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/favorite_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/stock_title_size"
        android:layout_marginTop="@dimen/fab_margin"
        android:textSize="@dimen/stock_news_size"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/favorite_price_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/quote_button_margin"
        android:textSize="@dimen/stock_news_size"
        android:layout_marginTop="@dimen/fab_margin"
        />
</LinearLayout>