<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/field_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/field_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        />
    <ImageView
        android:id="@+id/image_value"
        android:background="@android:color/transparent"
        android:scaleX="@dimen/stock_arrow_scale"
        android:scaleY="@dimen/stock_arrow_scale"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/stock_arrow_margin_left"
        android:padding="@dimen/no_padding"
        />
</LinearLayout>
